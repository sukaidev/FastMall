<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WrapWrap"
    app:cardBackgroundColor="@color/common_white"
    app:cardCornerRadius="@dimen/common_radius"
    app:cardElevation="2dp">

    <androidx.appcompat.widget.LinearLayoutCompat style="@style/MatchWrap.Vertical">

        <com.sukaidev.common.widget.RoundRectImageView
            android:id="@+id/mTopicIv"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/WrapWrap"
            android:layout_marginStart="@dimen/common_margin_small"
            android:layout_marginLeft="@dimen/common_margin_small"
            android:layout_marginTop="@dimen/common_margin_small"
            android:text="爱生活"
            android:textColor="@color/text_light_dark"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/WrapWrap"
            android:layout_marginStart="@dimen/common_margin_small"
            android:layout_marginLeft="@dimen/common_margin_small"
            android:text="有品有范有时尚"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_small_size"
            tools:ignore="HardcodedText" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>
